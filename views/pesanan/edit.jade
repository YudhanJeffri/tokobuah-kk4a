extends ../layout/base 
block content 
    section.content-header 
        h1 
            | Edit Buah
            small menu for editing buah data
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Level 
            li.active Here 
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Buah
                .box-tools.pull-right
                    button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form' method='post' action='/buah/edit/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error) 
                                    .alert.alert-danger.alert-dismissable 
                                        button.close(type='button' data-dismiss='alert' aria-hidden='true') 
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert! 
                                        | !{messages.msg_error}
                                - if (messages.msg_info) 
                                    .alert.alert-success.alert-dismissable 
                                        button.close(type='button' data-dismiss='alert' aria-hidden='true') 
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success! 
                                        | !{messages.msg_info}
                                .form-group
                                   label
                                        | Id Customer
                                    select(name="id_customer" id="id")
                                        each val in data
                                            option= val.id
                                .form-group
                                    label
                                        | Id 
                                    input(disabled=true type='text' name='id_buah' value="#{ (id == undefined) ? databuah.id : id }" placeholder='Id Buah').form-control
                                .form-group
                                    label
                                        | qty
                                    input(type='text' value='#{qty}' name='qty' placeholder='Jumlah buah yang ingin di pesan').form-control
                                .form-group
                                    label
                                        | Tanggal Pesan
                                    input(type='date' name='tgl_pesan' placeholder='Enter deskripsi').form-control
                            .box-footer
                                input(type="hidden" name="_method" value="PUT")
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil 
                                    |  Edit
                                a(href='/buah').btn.btn-primary.pull-right
                                    | Back