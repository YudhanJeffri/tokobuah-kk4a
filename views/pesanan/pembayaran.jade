extends ../layout/base 
block content 
    section.content-header 
        h1 
            | Pembayaran Page
            small it all starts here
        ol.breadcrumb 
            li 
                a(href='#') 
                    i.fa.fa-dashboard
                    | Level 
            li.active Here 
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Customer
                .box-tools.pull-right
                    button(type='button' data-widget='collapse' data-toggle='tooltip' title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form' method='post' action='/buah/pembayaran/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error) 
                                    .alert.alert-danger.alert-dismissable 
                                        button.close(type='button' data-dismiss='alert' aria-hidden='true') 
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert! 
                                        | !{messages.msg_error}
                                .form-group
                                    li Id Pesanan : #{data.id_pesanan}
                                    label
                                        | Id Pesanan
                                    input(type='text' name='id_pesanan' value='#{data.id_pesanan}' placeholder='Enter Id Pesanan').form-control
                                .form-group
                                    label
                                        | Tanggal Bayar 
                                    input(type='date' name='tgl_bayar' placeholder='Enter bayar').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit
                                a(href='/buah').btn.btn-primary.pull-right
                                    | Back